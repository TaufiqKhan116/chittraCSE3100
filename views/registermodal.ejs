<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Register A Device</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form class="my-5 col-xl-12" action="/register" method="post">
            <!-- email field -->
            <div class="form-group">
              <label>Mac address:</label>
              <input type="text" class="form-control" name="mac_address" placeholder="Mac address" required>
            </div>
            <button class="btn btn-info float-center mt-4" type="submit" style="margin-right: 120px !important;">Register</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
</div>